page {
  height: 100%;
}
.cates {
  height: 100%;
}
.cates .cates_container {
  /* height: calc ( 100vh - 45px ); */
  height: 100%;
  display: flex;
}
.cates .cates_container .left_menu {

  flex: 2;
  /* background-color: aqua; */
}
.cates .cates_container .left_menu .menu_item{
  height: 80rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 30rpx;
}
.cates .cates_container .left_menu .active{
  color: var(--themeColor);
  border-left: 5rpx solid currentColor;
}
.cates .cates_container .right_content {
  flex: 5;
  /* background-color: greenyellow; */
}
.cates .cates_container .right_content .goods_groups .goods_title{
  height: 80rpx;
  display: flex;

  justify-content: center;
  align-items: center;

}

.cates .cates_container .right_content .goods_groups .goods_title .delimiter{
  color: #ccc;
  padding: 0 10rpx;
}
.cates .cates_container .right_content .goods_groups .goods_list{
  display: flex;
  flex-wrap: wrap;

}
.cates .cates_container .right_content .goods_groups .goods_list navigator{
  width: 33.33%;
  text-align: center;
}
.cates .cates_container .right_content .goods_groups .goods_list navigator image{
  width: 70%;
}